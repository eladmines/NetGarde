FROM python:3.11-slim

WORKDIR /app

# Install netcat for wait logic
RUN apt-get update && apt-get install -y netcat-openbsd && rm -rf /var/lib/apt/lists/*

COPY requirements*.txt ./
RUN pip install --no-cache-dir -r requirements-dev.txt

# Do NOT copy backend source; volume mount will handle that
EXPOSE 8000

# Set environment variables for hot reload
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Start FastAPI in auto-reload mode
# --reload enables hot reload for code changes
# --reload-dir specifies which directories to watch (defaults to current directory)
CMD ["bash", "-c", "until nc -z db 5432; do echo 'Waiting for database...'; sleep 2; done; alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload --reload-dir /app"]
